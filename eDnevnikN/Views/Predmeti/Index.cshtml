
@{
    ViewBag.Title = "Predmeti";

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Predmeti</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <style>
        span.field-validation-error {
            color: red;
        }
    </style>
</head>
<body>

    <div style="width:90%; margin:0 auto" class="tablecontainer">
        <a class="popup btn btn-primary"
           href="/predmeti/create/" style="margin-bottom:20px; margin-top:20px">Unesi novi predmet</a>
        <table id="myPredmeti" class="table table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>Sifra predmeta</th>
                    <th>Naziv predmeta</th>
                    <th>Godina</th>
                    <th>Redosled</th>
                    

                    <th>Edit</th>
                    <th>Details</th>
                    <th>Delete</th>

                </tr>
            </thead>

        </table>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function () {
            var oTable = $('#myPredmeti').DataTable({
                "ajax": {
                    "url": '/Predmeti/GetPredmetis',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "PredmetiID", "autowidth": true },
                    { "data": "NazivPredmeta", "autowidth": true },
                    { "data": "GodineID", "autowidth": true },
                    { "data": "Redosled", "autowidth": true },
                   
                    {
                        "data": "PredmetiID", "width": "50px", "render": function (data) {
                            return '<a class="popup" href="/predmeti/edit/' + data + '">Edit</a>';
                        }
                    },

                    {
                        "data": "PredmetiID", "width": "50px", "render": function (data) {
                            return '<a class="popup" href="/predmeti/details/' + data + '">Details</a>';
                        }
                    },

                    {
                        "data": "PredmetiID", "width": "50px", "render": function (data) {
                            return '<a class="popup" href="/predmeti/delete/' + data + '">Delete</a>';
                        }
                    }
                ]
            })
            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            })
            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    //$.validator.unobtrusive.parse('form');
                });
                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Popup Dialog',
                        hight: 550,
                        width: 600,
                        close: function () {
                            $dialog.dialog('destroy').remove();
                        }
                    })
                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: 'POST',
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })
                    e.preventDefault();
                })
                $dialog.dialog('open');
            }
        })
    </script>
</body>
</html>
